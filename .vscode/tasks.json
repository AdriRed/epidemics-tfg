{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile-fortran",
            "type": "shell",
            "command": "bash",
            "dependsOn": ["compile-include-files"],
            "args": [
                "-c",
                "gfortran -g -Og -fimplicit-none -fcheck=all -fbacktrace -finit-local-zero -Wall -fcheck=bounds main.f90 -I${workspaceFolder}/include ${workspaceFolder}/builds/*.o -o ${workspaceFolder}/builds/main.out"
            ]
        },
        {
            "label": "compile-include-files",
            "type": "shell",
            "command": "bash",
            "dependsOn": "create-folders",
            "args": [
                "-c",
                "cd ${workspaceFolder} && ./compile_modules.sh"
            ]
        },
        {
            "label": "create-folders",
            "type": "shell",
            "command": "mkdir",
            "args": ["-p", "${workspaceFolder}/builds"]
        }
    ]
}